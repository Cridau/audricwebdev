<div class="conteneur">
  <div class="card" style="width: 18rem;">
    <%= cl_image_tag @site.photo, height: 150, width: 287, crop: :fill%>
    <div class="card-body">
      <h1 class="card-title"><%= @site.name %></h1>
      <p class="card-title"><%= link_to @site.address, @site.address %></p>
      <p class="card-text"><%= @site.articles %></p>
      <%= link_to "Visiter le site", @site.address,class: "btn btn-primary" %>
      <%= link_to "Retour", sites_path, class: 'btn btn-primary' %>
    </div>
  </div>
  <div class="button">
    <% if policy(@site).update? %>
      <%= link_to "Modifier", edit_site_path, class: 'btn btn-primary' %>
    <% end %>
    <% if policy(@site).destroy? %>
      <%= link_to "Supprimer", site_path(@site),
          method: :delete,
          data: { confirm: "Are you sure?" }, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>


