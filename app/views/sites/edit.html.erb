<%= form_for(@site) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :articles %>
    <%= f.text_area :articles, class: 'form-control' %>
  </div>

  <%= f.submit "Modifier", class: 'btn btn-primary' %>
  <%= link_to "Retour", site_path, class: 'btn btn-primary' %>
<% end %>

